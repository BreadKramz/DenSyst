{% extends 'base.html.twig' %}
{% block title %}Contact - DenSyst{% endblock %}

{% block body %}
<section class="py-20 max-w-3xl mx-auto px-6">
    <h1 class="text-4xl font-bold mb-8 text-center">Contact Us</h1>
    <form class="space-y-6 bg-white shadow p-8 rounded-lg">
        <div>
            <label class="block mb-1 font-semibold">Name</label>
            <input type="text" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-[#1A4487]">
        </div>
        <div>
            <label class="block mb-1 font-semibold">Email</label>
            <input type="email" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-[#1A4487]">
        </div>
        <div>
            <label class="block mb-1 font-semibold">Message</label>
            <textarea class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-[#1A4487]"></textarea>
        </div>
        <button class="w-full bg-[#1A4487] text-white px-6 py-3 rounded-lg font-semibold hover:bg-[#3D7A3F] transition">
            Send Message
        </button>
    </form>
</section>
{% endblock %}
